# DevSteward AI - Environment Configuration Template
# Copy this file to .env and customize for your environment

# === Server Configuration ===
# Host and port for the FastAPI server
HOST=127.0.0.1
PORT=8008

# === Ollama Configuration ===
# Base URL for Ollama API
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use for AI classification
# Common options: llama2, codellama, mistral
OLLAMA_DEFAULT_MODEL=llama2

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to src-py directory)
LOG_FILE=devsteward_ai.log

# === Development Settings ===
# Enable debug mode (more verbose logging, hot reload)
DEBUG=false

# === AI Classification Settings ===
# Confidence threshold for automatic classification (0.0-1.0)
# Classifications below this threshold will fall back to heuristics
AI_CONFIDENCE_THRESHOLD=0.7

# Timeout for Ollama API requests (seconds)
OLLAMA_TIMEOUT=30

# === File Organization Settings ===
# Default root directory for organized projects
# Leave empty to use user's home directory
DEFAULT_ORGANIZATION_ROOT=

# Create backup before organizing (recommended)
CREATE_BACKUP=true

# === Project Creation Settings ===
# Default git initialization for new projects
INIT_GIT_BY_DEFAULT=true

# Default .gitignore template for new projects
DEFAULT_GITIGNORE_TEMPLATE=python